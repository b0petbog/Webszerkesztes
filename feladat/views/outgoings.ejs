<%- include('includes/head') %>

    <link rel="stylesheet" href="/css/outgoings.css">
</head>

<body>
    <%- include('includes/navigation') %>

    <main class="container text-center">
        <% if (outs.length > 0) { %>
            <h1>Kiadásaim</h1>
            <p>Összes kiadás listázása...</p>
            <div class="grid">
                <% for (let outgoing of outs) { %>
                <article class="card outgoing-item" style="background-color:lightblue;border: double black 1px; box-shadow: 8px 8px 10px lightslategrey;">
                    <header class="card__header">
                        <h1 class="outgoing__title"><%= outgoing.title %></h1>
                    </header>
                    <div class="card__content">
                        <h2 class="outgoing__date" style="margin-bottom: 5px;"><%= outgoing.date %></h2>
                        <h2 class="outgoing__price"><%= outgoing.price %><span>&nbsp;Ft</span></h2>
                    </div>
                </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>Nincs kiadás.</h1>
        <% } %>
        </main>
<%- include('includes/end') %>
